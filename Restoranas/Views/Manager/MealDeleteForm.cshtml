@model Item

<div class="phone">
    <div class="skiltiespavadinimas">
        <p class="center">Ištrynimo patvirtinimas</p>
    </div>

    <div class="row">
        <div class="col-12 col-md-8 offset-md-2">
            <p class="center">
                Ar tikrai norite ištrinti patiekalą @Model.pavadinimas?
            </p>
            <form asp-action="DeleteMeal" asp-route-id="@Model.patiekalo_Id" method="post" class="text-center">
                <button type="submit" class="btn btn-outline-danger">Taip, ištrinti</button>
                <a href="@Url.Action("MealsPage", "Patiekalas")" class="btn btn-outline-secondary">Atšaukti</a>
            </form>

        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="row">
            <div class="col-12 col-md-8 offset-md-2">
                <br>
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            </div>
        </div>
    }
</div>
