@model Restoranas.Models.User

@{
    ViewData["Title"] = "Register Employee";
}

<h2>Registruoti darbuotoją</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<form asp-action="AddEmployeeForm" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="prisijungimo_vardas">Username</label>
        <input asp-for="prisijungimo_vardas" class="form-control" />
        <span asp-validation-for="prisijungimo_vardas" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="slaptazodis">Password</label>
        <input asp-for="slaptazodis" type="password" class="form-control" />
        <span asp-validation-for="slaptazodis" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Registruoti</button>
</form>
