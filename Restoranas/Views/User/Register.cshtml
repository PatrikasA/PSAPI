@model Restoranas.Models.User

@{
    ViewBag.Title = "Registracija";
}

<div class="container mt-5">
    <div class="text-center">
        <h2 class="display-4">Registracija</h2>
        <p>Užsiregistruokite, kad galėtumėte naudotis visomis sistemos funkcijomis</p>
    </div>

    <form id="registerForm" asp-action="Register" method="post" class="mt-4">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="prisijungimo_vardas" class="control-label">Prisijungimo vardas</label>
            <input asp-for="prisijungimo_vardas" class="form-control" />
            <span asp-validation-for="prisijungimo_vardas" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="slaptazodis" class="control-label">Slaptažodis</label>
            <input asp-for="slaptazodis" class="form-control" type="password" />
            <span asp-validation-for="slaptazodis" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="confirmPassword" class="control-label">Patvirtinkite slaptažodį</label>
            <input type="password" id="confirmPassword" class="form-control" name="confirmPassword" required />
            <div class="help-block with-errors"></div>
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Registruotis" class="mygtukas btn btn-outline-dark" />
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById('registerForm').addEventListener('submit', function (event) {
            var password = document.getElementById('slaptazodis').value;
            var confirmPassword = document.getElementById('confirmPassword').value;

            if (password !== confirmPassword) {
                alert('Slaptažodžiai nesutampa.');
                event.preventDefault();
            }
        });
    </script>
}
